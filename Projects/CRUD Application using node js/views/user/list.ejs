<%- include('../layout/header') %>

<body>
    <center class="mb-3">
        <h2><u>User Table</u></h2>
    </center>

    <center class="p-3">
        <% if(successMessages.length > 0){ %>
        <div class="alert alert-success" role="alert"><% successMessages.forEach((msg)=>{ %> <%= msg %> <% }) %></div>
        <% } %> <% if(errorMessages.length > 0){ %>
        <div class="alert alert-danger" role="alert"><% errorMessages.forEach((msg)=>{ %> <%= msg %> <% }) %></div>
        <% } %>
    </center>

    <div class="p-2">
        <div class="card">
            <div class="card-header">
                <a href="/admin/add-user">
                    <button class="btn btn-sm btn-success">
                        <i class="bi bi-plus"></i> Add new user
                    </button>
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">User ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Password</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Date of Birth</th>
                            <th scope="col">Address</th>
                            <th scope="col">City</th>
                            <th scope="col">State</th>
                            <th scope="col">Zip Code</th>
                            <th scope="col">Country</th>
                            <th scope="col">Role</th>
                            <th scope="col">Is_Active</th>
                            <th scope="col">Image</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach((item) => { %>
                        <tr>
                            <td><%= item.user_id %></td>
                            <td><%= item.username %></td>
                            <td><%= item.email %></td>
                            <td><%= item.password %></td>
                            <td><%= item.first_name %></td>
                            <td><%= item.last_name %></td>
                            <td><%= item.phone_number %></td>
                            <td><%= moment(item.date_of_birth).format("YYYY-MM-DD") %></td>
                            <td><%= item.address %></td>
                            <td><%= item.city %></td>
                            <td><%= item.state %></td>
                            <td><%= item.zip_code %></td>
                            <td><%= item.country %></td>
                            <td><%= item.role %></td>
                            <td><img src="<%= item.file_path %>" alt="" srcset="" /></td>
                            <td><%= item.is_active %></td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <a href="user/edit/<%= item.user_id %>">
                                        <button type="button" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil-fill"></i> Edit
                                        </button>
                                    </a>
                                    <a href="user/delete/<%= item.user_id %>" onclick=" return checkdelete()">
                                        <button type="button" class="btn btn-sm btn-danger">
                                            <i class="bi bi-archive-fill"></i> Delete
                                        </button>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

<script>
    function checkdelete() {
        return confirm("Are you sure you want to delete this user?");
    }
</script>

<%- include('../layout/footer') %>
