<%- include('../layout/header') %>
<body>
    <center class="mt-3">
        <a href="/admin/product">
            <button class="btn btn-sm btn-outline-primary border-0"><i class="bi bi-arrow-left-circle-fill"></i></button>
        </a>
    </center>
    <center class="mb-3"><h2>Update Product</h2></center>

    <div class="p-2">
        <div class="card">
            <form action="/admin/update-product" method="post">
                <div class="cad-body">
                    <div class="row p-4">
                        <div class="col-md-4">
                            <label for="name" class="from-label">Name</label>
                            <input type="text" name="name" id="name" class="form-control" value="<%= data.name %>" />
                        </div>
                        <div class="col-md-4">
                            <label for="description" class="from-label">Description</label>
                            <textarea type="text" name="description" id="description" class="form-control"><%= data.description %></textarea>
                        </div>
                        <div class="col-md-4">
                            <label for="price" class="from-label">Price</label>
                            <input type="text" name="price" id="price" value="<%= data.price %>" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label for="quantity" class="from-label">Quantity</label>
                            <input type="text" name="quantity" id="quantity" value="<%= data.quantity %>" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label for="date" class="from-label">Date</label>
                            <input
                                type="date"
                                name="date"
                                id="date"
                                value="<%= moment(data.created_at).format('YYYY-MM-DD') %>"
                                class="form-control"
                            />
                        </div>
                        <input type="hidden" name="edit_id" value="<%= data.id %>" />
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <div class="d-flex">
                        <button type="submit" class="btn btn-info btn-sm">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

<%- include('../layout/footer') %>
