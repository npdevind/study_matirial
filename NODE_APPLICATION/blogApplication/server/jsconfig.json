{
    "compilerOptions": {
        "target": "ES6", // Target ECMAScript 6 (2015) features
        "module": "commonjs", // CommonJS module system (used by Node.js)
        "moduleResolution": "node", // Use Node.js module resolution strategy
        "baseUrl": ".", // Base directory for resolving paths
        "paths": {
            // Path aliases
            "@controllers/*": ["./src/controllers/*"],
            "@models/*": ["./src/models/*"],
            "@routes/*": ["./src/routes/*"],
            "@middlewares/*": ["./src/middlewares/*"],
            "@utils/*": ["./src/utils/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
